{
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": "${command:pickArgs}"
    },
    {
      "name": "Python Debugger: Main",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/ok/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": "${command:pickArgs}",
      "python": "${command:python.interpreterPath}"
    }
  ]
}
